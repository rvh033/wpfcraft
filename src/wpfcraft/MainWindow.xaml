<Window x:Class="wpfcraft.WPFCraft"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfcraft"
        mc:Ignorable="d"
        Title="WPFCraft" Height="450" Width="800" Background="#FF00E2FF" KeyDown="KeyPressed" Name="GameWindow">
    <Grid Name="windowGrid">
        <Canvas>
            <ScrollViewer Name="camera" Height="450" Width="800" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                <Canvas Name="world" Width="9223372036854775807" Height="9223372036854775807">
                    <Canvas Name="chunks"></Canvas>
                    <Canvas Name="entities"></Canvas>
                    <Canvas Name="scaledOverlay">
                        <Rectangle Name="selectionBox" Width="1" Height="1" Stroke="Black" StrokeThickness="0.05"></Rectangle>
                    </Canvas>
                </Canvas>
            </ScrollViewer>
        </Canvas>
        <Canvas Name="uiIngame">
            <Label Name="onScreenText" Width="520" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
            <Label Name="blocksText" Canvas.Top="40" Width="260" Height="50"></Label>
            <Label Name="playerInfo" Canvas.Top="100" Width="200" Height="150" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
            <Label Name="selectionInfo" Canvas.Top="300" Width="200" Height="100" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
            <Label Name="chunkGenInfo" Canvas.Left="600" Width="200" Height="90" HorizontalAlignment="Center" VerticalAlignment="Top"></Label>
            <Label Name="networkInfo" Canvas.Left="600" Canvas.Top="151" Width="200" Height="239" HorizontalAlignment="Center" VerticalAlignment="Top"></Label>
        </Canvas>
        <Canvas Name="uiFSOption" Visibility="Visible">
            <Rectangle Width="800" Height="450" Fill="Black" Opacity="0.5"></Rectangle>
            <Rectangle Canvas.Left="250" Canvas.Top="125" Width="300" Height="150" Fill="Black" Opacity="0.5"></Rectangle>
            <Label Name="fsOptionTitle" Content="Switch to Windowed Borderless?" HorizontalContentAlignment="Center" Canvas.Left="250" Canvas.Top="125" Width="300" Height="40" Background="{x:Null}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
            <Label Name="fsOptionText" Content="" HorizontalContentAlignment="Center" Canvas.Left="250" Canvas.Top="175" Width="300" Height="40" Background="{x:Null}" Foreground="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
            <Button Name="fsOptionYesBtn" Canvas.Left="290" Canvas.Top="215" Content="Yes" Width="80" Height="30" Background="{x:Null}" BorderBrush="White" Foreground="White" FontWeight="Bold" FontSize="16"></Button>
            <Button Name="fsOptionNoBtn" Canvas.Left="430" Canvas.Top="215" Content="No" Width="80" Height="30" Background="{x:Null}" BorderBrush="White" Foreground="White" FontWeight="Bold" FontSize="16"></Button>
        </Canvas>
        <Canvas Name="uiMultiplayer" Visibility="Hidden">
            <Rectangle Width="800" Height="450" Fill="Black" Opacity="0.5"></Rectangle>
            <Rectangle Canvas.Left="250" Canvas.Top="125" Width="300" Height="150" Fill="Black" Opacity="0.5"></Rectangle>
            <Label Name="mpTitle" Content="Multiplayer!" HorizontalContentAlignment="Center" Canvas.Left="250" Canvas.Top="125" Width="300" Height="40" Background="{x:Null}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>
            <TextBox Name="ipField" Text="127.0.0.1:8888" Canvas.Left="260" Canvas.Top="175" Width="280" Height="40" Background="#3F000000" BorderBrush="{x:Null}" Foreground="White" SelectionBrush="White" SelectionTextBrush="White"></TextBox>
            <Button Name="joinBtn" Canvas.Left="290" Canvas.Top="225" Content="Join" Width="80" Height="30" Background="{x:Null}" BorderBrush="White" Foreground="White" FontWeight="Bold" FontSize="16"></Button>
            <Button Name="openBtn" Canvas.Left="430" Canvas.Top="225" Content="Open" Width="80" Height="30" Background="{x:Null}" BorderBrush="White" Foreground="White" FontWeight="Bold" FontSize="16"></Button>
        </Canvas>
        <Canvas Name="uiStop" Visibility="Hidden" Background="#FFEA0000">
            <Label Name="stopTitle" Content="Please restart WPFCraft" Canvas.Left="50" Canvas.Top="50" Width="400" Height="40" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontSize="20"></Label>
        </Canvas>
    </Grid>
</Window>
